<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigation_menu">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/shop_name"
       android:id="@+id/shop_name"
       android:textSize="20sp"
       android:gravity="center"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shop_address"
        android:id="@+id/shop_address"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@id/shop_name"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shop_type"
        android:id="@+id/category"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_below="@id/shop_address"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative_layout"
        android:layout_below="@id/category"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_icon"
        android:id="@+id/shop_edit"
        android:background="@drawable/round_icon"
        android:contentDescription="User Profile Edit"
        />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Products"
         android:layout_below="@+id/shop_edit"
      />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_icon"
        android:id="@+id/x"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_icon"
        android:contentDescription="User Profile Edit"
        />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Products"
         android:layout_below="@+id/x"
         android:layout_centerHorizontal="true"
         />

     <ImageButton
         android:id="@+id/y"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentEnd="true"
         android:layout_marginEnd="19dp"
         android:contentDescription="User Profile Edit"
         android:background="@drawable/round_icon"
         android:src="@drawable/profile_icon" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Products"
         android:layout_below="@+id/x"
         android:layout_alignParentEnd="true"
         />


    </RelativeLayout>

</RelativeLayout>